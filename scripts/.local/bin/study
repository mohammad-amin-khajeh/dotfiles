#!/usr/bin/env sh
# study for 90 minutes then take a 5 minute break

if [ "$1" != "" ]; then
  study_time="$(t2s "$1")"
else
  study_time="$(t2s 1h30m)"
fi

if [ "$2" != "" ]; then
  rest_time="$(t2s "$2")"
else
  rest_time="$(t2s 10m)"
fi

xset s off
termdown -s -q "$study_time" -z
"$term" -e calcurse
"$term" -c termFloat -e "$EDITOR" ~/Documents/coding_progress.md
xset s on
exec rest "$rest_time"
