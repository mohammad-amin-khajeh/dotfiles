KP_{Enter,Add}
   pactl set-sink-volume @DEFAULT_SINK@ {-,+}1% && kill -44 $(pidof dwmblocks) # update dwmblocks-async's volume module

XF86Audio{Raise,Lower}Volume
  pactl set-sink-volume @DEFAULT_SINK@ {+,-}2% && kill -44 $(pidof dwmblocks) # update dwmblocks-async's volume module

KP_Subtract
  playerctl --list-all | tail -n 1 | xargs playerctl play-pause --player # toggle the last audio stream

XF86MonBrightness{Down,Up}
  brightnessctl set {5-%, 5+%}

super + r
  rofi -show run

super + v
  copyq menu

# snap the "whole" screen and copy it to clipboard
super + shift + s; w
  curdate=$(date +%Y-%m-%d\ %H-%M-%S) && \
  file="${HOME}/Pictures/screenshots/${curdate}.png" && \
  maim "$file" && \
  echo "file://${file}" | \
  xclip -sel c -t text/uri-list && \
  dunstify ðŸ“¸ "screenshot taken" -t 1200

# screenshot a "region" and copy it to clipboard
super + shift + s; r
  curdate=$(date +%Y-%m-%d\ %H-%M-%S) && \
  file="${HOME}/Pictures/screenshots/${curdate}.png" && \
  maim --select "$file" && \
  echo "file://${file}" | \
  xclip -sel c -t text/uri-list


# "copy" a region to clipboard
super + shift + s; c
  maim --select | xclip -sel c -t image/png

super + w
    wifi-rofi

# toggle screenkey
super + alt + s
  pgrep screenkey && pkill screenkey || screenkey

super + alt + l
  slock

